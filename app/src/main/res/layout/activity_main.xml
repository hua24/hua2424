
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--背景-->
    <ImageView
        android:id="@+id/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#403D3D"
        android:scaleType="centerCrop" />
    <!--主界面-->
    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <!--任务栏占位-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <!--打开侧边栏-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageButton
                    android:id="@+id/main_side"
                    android:layout_alignParentStart="true"
                    android:onClick="open_side"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/yuanxing_beijing"
                    android:src="@mipmap/side"
                    android:scaleType="centerCrop" />

                <EditText
                    android:id="@+id/search_song"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_toStartOf="@+id/main_search"
                    android:layout_toEndOf="@+id/main_side"
                    android:background="@drawable/bg_2"
                    android:hint="输入歌曲名"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textCursorDrawable="@null" />
                <ImageButton
                    android:onClick="search"
                    android:id="@+id/main_search"
                    android:layout_alignParentEnd="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/yuanxing_beijing"
                    android:src="@mipmap/search"
                    android:scaleType="centerCrop" />
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:layout_alignParentTop="true"
                android:layout_above="@+id/small_layout"
                android:id="@+id/music_list2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/small_layout"
                android:clickable="true"
                android:background="#DC000000"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:padding="5dp"
                    android:id="@+id/small_picture"
                    android:clickable="true"
                    android:onClick="to_playing"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_pictures" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/small_name"
                        style="@style/shadow"
                        android:paddingLeft="10dp"
                        android:text="未播放"
                        android:textSize="20sp"
                        android:maxLines="2"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:clickable="true"
                        android:onClick="to_playing"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:padding="8dp"
                        android:onClick="small_pause"
                        android:src="@mipmap/pause_dark"
                        android:id="@+id/small_pause_or_play"
                        android:layout_width="80dp"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:padding="5dp"
                        android:onClick="small_next"
                        android:scaleType="centerCrop"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/next_tongzhi"/>
                </LinearLayout>

            </LinearLayout>
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:thumbTint="@color/red"
                android:progressTint="@color/Red"
                android:id="@+id/small_progressbar"
                android:padding="0dp"
                android:layout_alignTop="@+id/small_layout"
                android:layout_width="match_parent"
                android:layout_height="4dp"/>
        </RelativeLayout>

    </LinearLayout>
    <!--左菜单-->
    <LinearLayout
        android:background="#40ffffff"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:layout_width="270dp"
        >
        <LinearLayout
            android:background="@drawable/bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <!--任务栏占位-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        style="@style/shadow"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:gravity="center" />
                    <ImageView
                        android:id="@+id/img_weather"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        style="@style/shadow"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:text="今天"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/weather_today"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        style="@style/shadow"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:text="无数据"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        style="@style/shadow"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:text="明天"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/weather_tomorrow"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        style="@style/shadow"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:text="无数据"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    style="@style/shadow"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:background="@drawable/juxing_beijing"
                    android:clickable="true"
                    android:onClick="to_file_import"
                    android:textSize="30sp"
                    android:text="导入文件" />
                <TextView
                    style="@style/shadow"
                    android:textColor="@color/white"
                    android:text="睡眠定时"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/juxing_beijing"
                    android:onClick="to_sleep_timing" />
                <TextView
                    style="@style/shadow"
                    android:textColor="@color/white"
                    android:text="歌单管理"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:onClick="songlist_manage"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/juxing_beijing" />
                <TextView
                    style="@style/shadow"
                    android:textColor="@color/white"
                    android:text="选择背景"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:onClick="select_img"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/juxing_beijing" />
                <TextView
                    style="@style/shadow"
                    android:textColor="@color/white"
                    android:text="设置"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:onClick="setting"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/juxing_beijing" />
                <LinearLayout
                    android:background="#7C040303"
                    android:id="@+id/setting_layout"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/shadow"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:text="位置"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            style="@style/shadow"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:onClick="set_city"
                            android:id="@+id/setting_city"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:background="@drawable/juxing_beijing"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/shadow"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:text="返回不关闭应用"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <androidx.appcompat.widget.SwitchCompat
                            android:theme="@style/myswitch"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:id="@+id/setting_back"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/shadow"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:text="显示天气"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <androidx.appcompat.widget.SwitchCompat
                            android:theme="@style/myswitch"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:id="@+id/setting_weather"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
